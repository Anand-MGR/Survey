<link href="~/Content/assets/cssdatatable/jquery.dataTables.min.css" rel="stylesheet" />



<script>

    $(document).ready(function () {
        $('#tbldocuments1').DataTable({
            "pagingType": "full_numbers",
            "oLanguage": {
                "sLengthMenu": "Page Size: _MENU_"
            },
            columnDefs: [{ orderable: false, targets: [2, 3] }],
            "searching": false
        });

        $("#tbldocuments1_info").detach().prependTo('#tbldocuments1_wrapper');
        $("#tbldocuments1_paginate").detach().prependTo('#tbldocuments1_wrapper');
    });

     function SearchRecords() {
         var Search = $("#txtserach").val();
         var Selectedtype = document.getElementById("OrderList").value;
         /*alert(Selectedtype);*/
            $.ajax({
                type: "Post",
                url: '@Url.Action("SearchRecords", "Questions")',
                data: '{Value: "' + Search + '",Fliterby: "' + Selectedtype + '"}',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (data) {

                    $('#DataGirdDiv').html("");
                    $('#DataGirdDiv').html(data);

                    $('#tbldocuments1').DataTable({
                        "pagingType": "full_numbers",
                        "oLanguage": {
                            "sLengthMenu": "Page Size: _MENU_"
                        },
                        columnDefs: [{ orderable: false, targets: [2, 3] }],
                        "searching": false
                    });

                    $("#tbldocuments1_info").detach().prependTo('#tbldocuments1_wrapper');
                    $("#tbldocuments1_paginate").detach().prependTo('#tbldocuments1_wrapper');
                }
            });
        }
</script>
