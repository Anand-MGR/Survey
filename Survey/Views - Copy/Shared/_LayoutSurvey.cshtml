            @*<a href='@Url.Action("Logout", "Login")' class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">Log Out</span> </a>*@
        </nav>
    </div>
    <!--Container Main start-->
    <div>
        @RenderBody()

    </div>

    <!--Container Main end-->
    <div class="footer">

    </div>
