@model Survey.Models.ProjectMasterModel
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<table id="tbldocuments" class="DeskUser">
    <thead>
        <tr>
             <th style="width:70%">Question Type</th>
             <th>Question Type Status</th>
             <th>Edit Question Type Status</th>
             @*<th>Delete User Status</th>*@
         
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.LstQuestiontypeFrom)
        {
        <tr>
            <td>@x.Q_QuestionType</td>

            <td>
                @if (@x.QuestionTypeStatus == true)
                {
                    <img src="~/images/icons/Compeleted.png" style="width: 25px;" />
                }
                else
                {
                    <img src="~/images/icons/incompleted.png" style="width: 25px;" />
                }
            </td>


            <td><i style='font-size:24px' class='far' onclick="EditQuestionTypeDashboard(@x.QT_ID)">&#xf044;</i></td>           
            @*<td><i style='font-size:24px' class='fas' onclick="DeleteUserDashboard(@x.UR_ID)">&#xf2ed;</i></td>*@
        </tr>

        }

    </tbody>
</table>

<table id="tbldocuments" class="MobUser" style="width:100%">
    @foreach (var x in Model.LstQuestiontypeFrom)
    {
        <tr>
            <th>Question Type</th>
            <td>@x.Q_QuestionType</td>
        </tr>

        <tr>
            <th>User Status</th>
            <td>
                @if (@x.QuestionTypeStatus == true)
                {
                    <img src="~/images/icons/Compeleted.png" style="width: 25px;" />
                }
                else
                {
                    <img src="~/images/icons/incompleted.png" style="width: 25px;" />
                }
            </td>
        </tr>
        <tr>
            <th>Edit</th>
            <td><i style='font-size:24px' class='far' onclick="EditUserDashboard(@x.QT_ID)">&#xf044;</i></td>
        </tr>
        @*<tr>
            <th>Delete</th>
            <td><i style='font-size:24px' class='far' onclick="DeleteUserDashboard(@x.UR_ID)">&#xf044;</i></td>
        </tr>*@
        <tr>
            <th> </th>
            <td>
                &nbsp;
            </td>
        </tr>
    }
</table>


<script type="text/javascript">

    function EditQuestionTypeDashboard(UR_ID) {
           var link = '@Url.Action("EditQuestionsTypeForm", "Questions", new { UR_ID = "replace", Mode = "Modes" })';
         link = link.replace("replace", UR_ID);
        link = link.replace("Modes", "Edit");
         window.location.href = link.replace(/&amp;/g, '&');

    }
    </script>
<script>
    function DeleteUserDashboard(UR_ID) {
        var isConfirmed = confirm("Are you sure you want to delete this data?");
        if (isConfirmed) {
            var link = '@Url.Action("DeleteUserRoleDashboard", "User", new { UR_ID = "replace", Mode = "Modes" })';
            link = link.replace("replace", UR_ID);
            link = link.replace("Modes", "Edit");
            window.location.href = link.replace(/&amp;/g, '&');
        }
    }
</script>