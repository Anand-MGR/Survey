<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>



<script type="text/javascript">
    $(document).ready(function () {

        $("#submitRatings").click(function () {
            var ratings = [];

            $('input[type="radio"]:checked').each(function () {
                var ratingValue = $(this).val().split('-')[0];
                var questionID = $(this).attr('name').split('-')[1];

                ratings.push({ Question: questionID, Answer: ratingValue });
            });

            //alert(ratings);
            var psId = $("#PSId").text();
            var PSstatus = $('#PSstatus').prop('checked');

            //var QType = $("#QType").text();
            //var ratingFrom = $("#Fromrating").text();

            $.ajax({
                type: "POST",
                url: "/Questions/ReviewRating2",
                data: {
                    ratings: ratings,
                    psId: psId,
                    PSstatus: PSstatus
                    //prId: prId,
                    //QType: QType,
                    //ratingFrom: ratingFrom
                },
                success: function (result) {
                    window.location.href = "/Questions/GetCLData";
                },
                error: function (error) {

                    console.log(error);
                }
            });
        });
    });
</script>





