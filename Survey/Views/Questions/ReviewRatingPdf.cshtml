@model Survey.Models.ReviewSummaryModel
@{
    ViewBag.Title = "ReviewRatingPdf";
    //Layout = "~/Views/Shared/_LayoutSurvey.cshtml";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css">
<link href="~/Css/Ratepagenew.css" rel="stylesheet" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>

@Html.ActionLink("Back To DashBoard", "GetCLData", "Questions", new { @class = "backtodashboard" })
<br />
<br />

@foreach (var q in Model.Final)
{
    <div style="display:none;">
        @Html.DisplayFor(m => q, new { @id = q })
    </div>

    <script type="text/javascript">

        $(document).ready(function () {
            $("#@q").attr('checked', true);
        });

    </script>
}
<div style="display:flex;">
    <p class="firstP" style="font-size:20px !important;">Project  :@Model.ProjectName</p>

    @if (Model.PS_Status == true)
    {<p style="float: left;padding-left:30%; color: green; font-family:'Times New Roman'; font-size: 20px;font-weight:bold;">Status : Completed</p> }
    else
    { <p style="float: left; padding-left: 30%; color: red; font-family:'Times New Roman'; font-size: 15px; font-weight: bold; "> Status : Not Completed</p>}
    <p style="float: right; font-family: 'Times New Roman'; font-size: 20px;">Assigned Date:@Model.PS_Date.ToString("MM/dd/yyyy")</p><br /><br />
</div>

<hr />
<div>
    <div id="selectedratings" style="display:none;"></div>
    @*<button type="submit" id="submitRatings" class="btn btn-primary btn-lg" onclick="submitbtnclick()">Submit</button>*@
    @*<button class="btn-btnprimary" type="submit" id="save" name="Command" value="Add" style="background-color: forestgreen; color: white;padding: 8px; border: none; font-size: 14px; border-radius: 4px; " onclick="if (Savenewuser(Submit)) { return false; }">Update</button>*@
    @if (Model.LstReview.Count() > 0)
    {
        foreach (var typeVal in Model.LstReview.Select(x => x.PRType).Distinct())
        {

            if (Model.LstReview.Where(o => o.PRType == typeVal).Count() > 0)
            {

                <h2 style="font-family: 'Times New Roman';text-align:center;">@Model.LstQtype.Where(objTotalQtype => objTotalQtype.Q_Qustionvalue == typeVal).Select(objTotalQtype => objTotalQtype.Q_Qus).FirstOrDefault()</h2>

                <br />
                <p class="firstP">Client  : @Model.LstReview.Where(o => o.PRType == typeVal).Select(o => o.PR_From).FirstOrDefault()</p>
                <p class="secondP">Project Manager: @Model.LstReview.Where(o => o.PRType == typeVal).Select(o => o.PR_RatingTo).FirstOrDefault()</p>
                <p class="Sdate">Submitted Date : @Model.LstReview.Where(o => o.PRType == typeVal).Select(o => o.PSD_CreatedDate.ToString("MM/dd/yyyy")).FirstOrDefault()</p>
                <br />
                <br />
                <hr />

                <div>

                    @foreach (var x in Model.LstReview.Where(o => o.PRType == typeVal))
                    {
                        <div>
                            <br />
                            <label>@x.Q_Question</label><br />

                            <div class="stars">
                                <input class="star star5" id="star5-@x.Q_Id" type="radio" name="star-@x.Q_Id" value="5-@x.Q_Id" disabled />
                                <label class="star star5" for="star5-@x.Q_Id"></label>
                                <input class="star star4" id="star4-@x.Q_Id" type="radio" name="star-@x.Q_Id" value="4-@x.Q_Id" disabled />
                                <label class="star star4" for="star4-@x.Q_Id"></label>
                                <input class="star star3" id="star3-@x.Q_Id" type="radio" name="star-@x.Q_Id" value="3-@x.Q_Id" disabled />
                                <label class="star star3" for="star3-@x.Q_Id"></label>
                                <input class="star star2" id="star2-@x.Q_Id" type="radio" name="star-@x.Q_Id" value="2-@x.Q_Id" disabled />
                                <label class="star star2" for="star2-@x.Q_Id"></label>
                                <input class="star star1" id="star1-@x.Q_Id" type="radio" name="star-@x.Q_Id" value="1-@x.Q_Id" disabled />
                                <label class="star star1" for="star1-@x.Q_Id"></label>
                            </div>
                        </div>
                    }
                </div>

            }
            <br />
            <hr />
            @*<button type="submit">Submit</button>*@
            @*</form>*@
        }
    }
</div>


<style type="text/css">
    .backtodashboard {
        float: right;
    }

    .firstP {
        float: left;
        font-family: Times New Roman;
        font-size: 18px;
        font-weight: bold;
    }

    .secondP {
        float: left;
        font-family: 'Times New Roman';
        font-size: 18px;
        padding-left: 30%;
        font-weight: bold;
    }

    .Sdate {
        font-family: 'Times New Roman';
        font-size: 18px;
        float: right;
        font-weight: bold;
    }
</style>
