                <label class="star star-4" for="star4.@x.QuestionID"></label>

                <input class="star star-3" id="star3.@x.QuestionID" type="radio" name="rating.@x.QuestionID" value="3 - @x.QuestionID" onclick="ratingclick()" />
                <label class="star star-3" for="star3.@x.QuestionID"></label>

                <input class="star star-2" id="star2.@x.QuestionID" type="radio" name="rating.@x.QuestionID" value="2 - @x.QuestionID" onclick="ratingclick()" />
                <label class="star star-2" for="star2.@x.QuestionID"></label>

                <input class="star star-1" id="star1.@x.QuestionID" type="radio" name="rating.@x.QuestionID" value="1 - @x.QuestionID" onclick="ratingclick()" />
                <label class="star star-1" for="star1.@x.QuestionID"></label>
            </div>


